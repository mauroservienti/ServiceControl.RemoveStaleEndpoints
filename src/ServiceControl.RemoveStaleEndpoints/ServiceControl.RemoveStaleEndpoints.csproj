<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <ToolCommandName>servicecontrol-remove-stale-endpoints</ToolCommandName>
        <PackAsTool>True</PackAsTool>
        <Description>A tool that removes inactive endpoints from ServiceControl primary instances and endpoint instances from ServiceControl Monitoring instances.</Description>
        <GenerateDocumentationFile>false</GenerateDocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
    </ItemGroup>
    
</Project>
